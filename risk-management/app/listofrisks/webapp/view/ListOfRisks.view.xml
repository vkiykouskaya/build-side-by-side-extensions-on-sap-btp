<mvc:View controllerName="listofrisks.controller.ListOfRisks"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="idRisksTable"
                inset="false"
                items="{/ListOfRisks}"
                mode="SingleSelect">
                <headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
				<content>
					<ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <Button id="editDescriptionBtn"
                            text="Edit Description"
                            press=".editDescription" 
                            binding="{RiskService.editDescription}"/>
					
				</content>
			</OverflowToolbar>
		</headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1"
                        width="12em">
                        <Text id="_IDGenText1" text="ID" />
                    </Column>
                    <Column id="_IDGenColumn2"
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text id="_IDGenText2" text="Title" />
                    </Column>
                    <Column id="_IDGenColumn3"
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text id="_IDGenText3" text="Owner" />
                    </Column>
                    <!-- <Column id="_IDGenColumn4"
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text id="_IDGenText10" text="" />
                    </Column> -->
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
                        <cells>
                            <Text id="_IDGenText4"
                                text="{ID}" />
                            
                            <Text id="_IDGenText5"
                                text="{title}" />
                            <Text id="_IDGenText6"
                                text="{owner}" />
                            
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
